{
  "name": "kontra",
  "version": "10.0.2",
  "description": "Kontra HTML5 game development library",
  "main": "kontra.js",
  "module": "kontra.mjs",
  "sideEffects": false,
  "files": [
    "kontra.js",
    "kontra.mjs",
    "kontra.min.js",
    "kontra.min.mjs",
    "kontra.d.ts"
  ],
  "scripts": {
    "start": "http-server -S -C cert.pem",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:permutations": "node test/permutations",
    "test:ts": "tsc test/typings/*.ts --noEmit",
    "test:debug": "jest --verbose",
    "eslint": "eslint ./{src,test}/",
    "build": "gulp build",
    "build:docs": "gulp build:docs",
    "watch": "gulp watch",
    "dist": "gulp dist",
    "release": "sh tasks/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/straker/kontra.git"
  },
  "keywords": [
    "HTML5",
    "JavaScript",
    "game",
    "library",
    "js13k"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Steven Lambert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/straker/kontra/issues"
  },
  "homepage": "https://github.com/straker/kontra",
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@rollup/stream": "^2.0.0",
    "babel-jest": "^30.0.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.4.1",
    "glob": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-livingcss": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-preprocess": "git+https://github.com/straker/gulp-preprocess.git",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-size": "^4.0.1",
    "gulp-terser": "^2.1.0",
    "http-server": "^14.0.0",
    "jest": "^30.0.3",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^13.2.1",
    "livingcss": "^7.0.1",
    "marked": "^3.0.7",
    "preprocess": "git+https://github.com/straker/preprocess.git",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "typescript": "^4.4.4",
    "vinyl-source-stream": "^2.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
